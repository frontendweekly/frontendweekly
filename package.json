{
  "name": "frontendweekly",
  "version": "0.0.1",
  "type": "module",
  "description": "Frontend Weeklyでは国内・海外のフロントエンド関連情報を厳選し毎週お届けします。",
  "scripts": {
    "build": "cross-env ELEVENTY_ENV=production eleventy",
    "build:clean": "rimraf dist/*",
    "build:function": "netlify functions:build --src functions",
    "build:postcss": "postcss 11ty/_postcss/main.pcss -o 11ty/_includes/assets/styles/main.css --env production",
    "build:production": "run-s build:clean build:function build:postcss build",
    "dev": "cross-env ELEVENTY_ENV=development eleventy --serve",
    "dev:netlify": "cross-env ELEVENTY_ENV=development netlify dev",
    "start": "npm run dev",
    "post:new": "zx _task/node-trello-contents.mjs",
    "post:llm": "zx _task/llm-curation.mjs",
    "test:llm": "zx _task/test-llm-system.mjs",
    "test:task": "vitest _task/*.spec.js",
    "prepare": "husky install",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format .",
    "format:fix": "biome format --write ."
  },
  "author": "Yuya Saito <hello@studiomohawk.com> (https://github.com/studiomohawk)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/frontendweekly/frontendweekly.git"
  },
  "keywords": [
    "eleventy",
    "netlify"
  ],
  "bugs": {
    "url": "https://github.com/frontendweekly/frontendweekly/issues"
  },
  "engines": {
    "node": ">=22.17.0"
  },
  "homepage": "https://github.com/frontendweekly/frontendweekly#readme",
  "dependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@11ty/eleventy-fetch": "^5.1.0",
    "@11ty/eleventy-plugin-rss": "^2.0.4",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.1",
    "@dotenvx/dotenvx": "^1.47.6",
    "cssnano": "^7.1.0",
    "gray-matter": "^4.0.3",
    "html-minifier-terser": "^7.2.0",
    "markdown-it": "^14.0.0",
    "markdown-it-anchor": "^9.0.0",
    "node-fetch": "^3.3.2",
    "node-jq": "^6.0.1",
    "openai": "^4.104.0",
    "playwright": "^1.54.1",
    "postcss": "^8.3.6",
    "posthtml": "^0.16.5",
    "posthtml-urls": "^1.0.0",
    "sanitize-html": "^2.5.1",
    "twitter-api-v2": "^1.24.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.1",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "biome": "^0.3.3",
    "cross-env": "^7.0.3",
    "fast-glob": "^3.2.7",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.2",
    "netlify-cli": "^22.3.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^11.0.1",
    "postcss-import": "^16.1.1",
    "postcss-load-config": "^6.0.1",
    "qoa": "^0.2.0",
    "rimraf": "^6.0.1",
    "signale": "^1.4.0",
    "vitest": "^3.2.4",
    "zx": "^8.7.1"
  }
}
