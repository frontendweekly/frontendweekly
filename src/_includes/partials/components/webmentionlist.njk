<div class="c-webmention-list" id="webmentions">
    <h3>Webmentions</h3>
    <div class="c-webmention-list__facepile">
      {% for webmention in mentions | reverse | head(5) %}
        <img src="{% if webmention.author.photo %}{{ webmention.author.photo }}{% else %}{{ '/images/webmention-avatar-default.svg' | url }}{% endif %}" title="{{ webmention.author.name }}" alt="{{ webmention.author.name }}" class="c-webmention-list__face">
      {% endfor %}
      {% if mentions.length > 5 %}
        <span>+{{ mentions.length - 5 }}</span>
      {% endif %}
    </div>
    <ol class="c-webmention-list__list">
      {% for webmention in mentions | reverse %}
        <li class="c-webmentions__item">
          {% include 'partials/components/webmention.njk' %}
        </li>
      {% endfor %}
    </ol>
</div>
