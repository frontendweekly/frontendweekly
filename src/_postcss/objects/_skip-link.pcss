.o-skip-link:not(:focus) {
  position: absolute;
  width: 1px;
  height: auto;
  padding: 0;
  margin: 0;
  overflow: hidden;
  clip: rect(0 0 0 0);
  white-space: nowrap;
  border: 0;
}

.o-skip-link:focus {
  position: absolute;
  top: 0;
  left: 0;
  display: inline-block;
  padding: 1rem;
  font-weight: 700;
  line-height: 1;
  color: white;
  text-decoration: none;
  background-color: black;
}
